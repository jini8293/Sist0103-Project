package day0109;

import java.util.Scanner;

public class QuizInOutRank_16 {

	public static void main(String[] args) {
		// "홍수연", "김수연", "최수연", "민수연"
		// = { 90, 88, 100, 78 }
		// = { 100, 55, 100, 87 }
		// = { 90, 68, 100, 66 }

		Scanner s = new Scanner(System.in);

		int in;
		String[] name;
		int[] kor;
		int[] eng;
		int[] mat;
		int tot = 0;
		double avg = 0;
		int[] rank = null;

		System.out.print("인원수를 입력하시오: ");
		in = Integer.parseInt(s.nextLine());
		
		name = new String[in];
		kor = new int[in];
		eng = new int[in];
		mat = new int[in];
		
		for (int i = 0; i < in; i++) {
			System.out.println("/");
			name[i] = s.nextLine();
			System.out.println("/");
			kor[i] = Integer.parseInt(s.nextLine());
			System.out.println("/");
			eng[i] = Integer.parseInt(s.nextLine());
			System.out.println("/");
			mat[i] = Integer.parseInt(s.nextLine());
			// 총점
			tot += kor[i];
			tot +=eng[i];
			tot+=mat[i];
		}

		// 2. 등수
		for (int i = 0; i < in; i++) {
			rank[i] = 1;
			for (int j = 0; j < in; j++) {
				if (tot < tot) {
					rank[i]++;
				}
			}
		}
		avg = (double) tot / in;

		// 3. 출력
		System.out.println("번호\t이름\t국어\\t영어\\t수학\\t총점\\t평균\t등수");
		System.out.println("==========================================");

		for (int i = 0; i < in; i++) {
			System.out.println((i + 1) + "\t" + name[i] + "\t" + kor[i] + "\t" + eng[i] + "\t" + mat[i] + "\t" + tot
					+ "\t" + avg + "\t" + rank[i]);

		}

	}

}
