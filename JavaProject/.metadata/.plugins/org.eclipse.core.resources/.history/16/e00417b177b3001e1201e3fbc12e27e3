package day0115;

import java.util.Date;

public class NullPointException_13 {

	Date date;

	public void write() {
		int y, m, d;

		try {
			y = date.getYear() - 1900;
			m = date.getMonth() + 1;
			d = date.getDate();

			System.out.println(y + "년 " + m + "월 " + d + "일 입니다");
		} catch (Exception e) {
		}
	}

	}

	public static void main(String[] args) {

		NullPointerException_13 nullex = new NullPointException_13();
		nullex.write();

	}

}
